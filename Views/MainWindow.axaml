            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>

            </Grid.ColumnDefinitions>
            
            <!-- Row 1 (1-10) -->
            <RadioButton 
                Grid.Row="0"
                Grid.Column="0"
                Name="FirstBtn"
                Content="1"
                Checked="Button_OnClick"
                x:Name="Button_one"
                
                />
            <RadioButton Grid.Row="0" Grid.Column="1" Checked="Button_OnClick">2</RadioButton>
            <RadioButton Grid.Row="0" Grid.Column="2" Checked="Button_OnClick">3</RadioButton>
            <RadioButton Grid.Row="0" Grid.Column="3" Checked="Button_OnClick">4</RadioButton>
            <RadioButton Grid.Row="0" Grid.Column="4" Checked="Button_OnClick">5</RadioButton>
            <RadioButton Grid.Row="0" Grid.Column="5" Checked="Button_OnClick">6</RadioButton>
            <RadioButton Grid.Row="0" Grid.Column="6" Checked="Button_OnClick">7</RadioButton>
            <RadioButton Grid.Row="0" Grid.Column="7" Checked="Button_OnClick">8</RadioButton>
            <RadioButton Grid.Row="0" Grid.Column="8" Checked="Button_OnClick">9</RadioButton>
            <RadioButton Grid.Row="0" Grid.Column="9" Checked="Button_OnClick">10</RadioButton>
            
            <!-- Row 2 (11-20) -->
