<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:FunnyVolumeApp.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="{Binding WindowWidth}" d:DesignHeight="{Binding WindowHeight}"
        x:Class="FunnyVolumeApp.Views.MainWindow"
        Icon="/Assets/audio-on.ico"
        Title="Advanced Volume Control"
        WindowStartupLocation="CenterScreen"
        CanResize="true"
        Width="{Binding WindowWidth}"
        Height="{Binding WindowHeight}"
        MinWidth="{Binding WindowWidth}"
        MinHeight="{Binding WindowHeight}"
        Background="Transparent"
        TransparencyLevelHint="None"
        TransparencyBackgroundFallback="White">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <StackPanel VerticalAlignment="Center"
                Margin="5">
        <ExperimentalAcrylicBorder IsHitTestVisible="False">
            <ExperimentalAcrylicBorder.Material>
                <ExperimentalAcrylicMaterial
                    FallbackColor="White"
                    BackgroundSource="Digger"
                    TintColor="White"
                    TintOpacity="1"
                    MaterialOpacity="0.95"
                />
                
            </ExperimentalAcrylicBorder.Material>
        </ExperimentalAcrylicBorder>
        <TextBlock Text="{Binding Greeting}"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Height="30"
                   FontSize="20"/>
